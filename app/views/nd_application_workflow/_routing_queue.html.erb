
<div id="nd_workflows_routing_queue">
  <div class="row">
    <div class="columns small-2">Net ID</div>
    <div class="columns small-4">User name</div>
    <div class="columns small-4">Action Required</div>
    <div class="columns small-2">Status</div>
  </div>
  <% local_assigns[:nd_workflows].each do |wf| %>
      <div class="row" id="d_routing_queue_<%= wf.id %>" <% if wf.is_approval? %>class="short_bottom"<% end %>>
        <div class="columns small-2"><%= wf.assigned_to %></div>
        <div class="columns small-4"><%= wf.assigned_to_first_name %><%= wf.assigned_to_last_name %></div>
        <div class="columns small-4"><% if output_custom_type_description %><%= wf.workflow_custom_type_description %><% end %> <% if output_type_description %><%= wf.workflow_type_description %><% end %></div>
        <div class="columns small-2"><%= wf.workflow_state_description %><% if wf.workflow_state == "approved" %> by <%= wf.approved_by.upcase %> on <%= wf.approved_date.strftime("%m/%d/%Y") %><% end %></div>
      </div>
      <% if using_nd_workflow_details %>
        <% if wf.nd_workflow_details.count > 0 %>
          <div class="row">
            <div class="columns small-skip-2 small-10">
            <% wf.nd_workflow_details.each do |v| %>
              <% if v.validation_value %><%= v.validation_value_text %>: <% v.validation_value %><% end %>:
              <% if v.validation_description %><%= v.validation_description %><% end %>
              <% if v.validation_text %><%= v.validation_text %><% end %><br />
            <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
      <% if wf.workflow_state == "approved" %>
        <% unless wf.approval_notes.blank? %>
          <div class="row">
            <div class="columns small-skip-2 small-10">
              <span style="font-style: italic;">Approval Notes: <%= wf.notes %></span>
            </div>
          </div>
        <% end %>
      <% end %>
  <% end %>
</div>
