<div class="row">
  <div class="columns small-12">
    <p id="notice"><%= notice %></p>

      <h1>Listing Parent Records</h1>

      <table>
        <thead>
          <tr>
            <th>Parent desc</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @parent_records.each do |parent_record| %>
            <tr>
              <td><%= parent_record.parent_desc %></td>
              <td><%= link_to 'Show', parent_record %></td>
              <td><%= link_to 'Edit', edit_parent_record_path(parent_record) %></td>
              <td><%= link_to 'Destroy', parent_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      New Parent Record with <br>
      <ul>
        <li><a href="/parent_records/new">Workflow with approvals and checkbox to include detail in email (DEFAULT)</a></li>
        <li><a href="/parent_records/new/true">Workflow with approvals and checkbox to include detail in email </a></li>
        <li><a href="/parent_records/new/true/false">Workflow with approvals and without checkbox to include detail in email </a></li>
        <li><a href="/parent_records/new/false/true">Workflow with only FYI and checkbox to include detail in email</a></li>
        <li><a href="/parent_records/new/false/false">Workflow with only FYI and without checkbox to include detail in email</a></li>
      </ul>
  </div>
</div>
